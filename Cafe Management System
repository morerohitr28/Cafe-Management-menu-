menu = {
    'Pizza': 120,
    'Burger': 80,
    'Salad': 40,
    'Coffe': 25,
    'Sihab': 0.2 # Coupon for 20% discount
}

print("ğŸ½ï¸ Welcome to Our Restaurant!")
print("Here's our menu:\n")

for item, price in menu.items():
    if item != "Sihab":
        print(f"{item}: â‚¹{price}")
print("\n------------------------------")

# First order
Order1 = input("ğŸ“ What would you like to order?: ").strip().title()

if Order1 not in menu or Order1 == "Sihab":
    print("âŒ Invalid item. Please select a valid item from the menu.")
    exit()

print(f"âœ… {Order1} added to your order. Price: â‚¹{menu[Order1]}")

# Ask for more orders
more = input("â• Do you want to order more? (Yes/No): ").strip().lower()

if Order1 == "Coffe" and more == "no":
    print("âš ï¸ Sorry, you can't order just a coffee.")
    print("ğŸ™ Thank you for visiting!")
    exit()

elif more == "no":
    print(f"ğŸ’° Your total bill is: â‚¹{menu[Order1]}")
    print("ğŸ™ Thank you for ordering!")
    exit()

# Second order
Order2 = input("ğŸ“ Enter your second item: ").strip().title()

if Order2 not in menu or Order2 == "Sihab":
    print("âŒ Invalid item. Please select a valid item from the menu.")
    exit()

print(f"âœ… {Order2} added to your order. Price: â‚¹{menu[Order2]}")

# Calculate total
total_bill = menu[Order1] + menu[Order2]

# Check for coupon
coupon = input("ğŸ Do you have a coupon code? If yes, enter it: ").strip().title()

if coupon == "Sihab":
    discount = total_bill * menu["Sihab"]
    final_bill = total_bill - discount
    print(f"âœ… 20% coupon applied. You saved â‚¹{discount:.2f}")
    print(f"ğŸ’° Your final bill is: â‚¹{final_bill:.2f}")
else:
    print(f"ğŸ’° Your total bill is: â‚¹{total_bill}")

print("ğŸ™ Thank you for ordering with us!")
